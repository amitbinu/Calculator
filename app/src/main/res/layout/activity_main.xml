<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.android.calculator.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/textView"
        android:text=""
        android:textSize="80dp"
        android:background="#e0e0e0"
        android:fadingEdge="horizontal"
        android:textColor="#000000"
        android:scrollHorizontally="true"
        android:maxLines="1"
        android:scrollbars="none"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/answer"
        android:text=""
        android:gravity="right"
        android:textSize="70dp"
        android:background="#e0e0e0"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numbers"
        android:layout_alignParentBottom="true"
        android:background="#000">
        <LinearLayout
            android:id="@+id/firstNumbers"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="83dp"
                android:layout_height="100dp"
                android:textColor="@color/colorAccent"
                android:textSize="80dp"
                android:gravity="center"
                android:onClick="clicked1"
                android:text="1"/>
            <TextView
                android:layout_width="83dp"
                android:layout_height="100dp"
                android:textColor="@color/colorAccent"
                android:textSize="80dp"
                android:gravity="center"
                android:onClick="clicked2"
                android:text="2"/>
            <TextView
                android:layout_width="83dp"
                android:layout_height="100dp"
                android:textColor="@color/colorAccent"
                android:textSize="80dp"
                android:gravity="center"
                android:onClick="clicked3"
                android:text="3"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/SecondNumbers"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_below="@id/firstNumbers"
            android:orientation="horizontal">

            <TextView
                android:layout_width="83dp"
                android:layout_height="100dp"
                android:textColor="@color/colorAccent"
                android:textSize="80dp"
                android:gravity="center"
                android:onClick="clicked4"
                android:text="4"/>
            <TextView
                android:layout_width="83dp"
                android:layout_height="100dp"
                android:textColor="@color/colorAccent"
                android:textSize="80dp"
                android:gravity="center"
                android:onClick="clicked5"
                android:text="5"/>
            <TextView
                android:layout_width="83dp"
                android:layout_height="100dp"
                android:textColor="@color/colorAccent"
                android:textSize="80dp"
                android:gravity="center"
                android:onClick="clicked6"
                android:text="6"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ThirdNumbers"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_below="@id/SecondNumbers"
            android:orientation="horizontal">

            <TextView
                android:layout_width="83dp"
                android:layout_height="100dp"
                android:textColor="@color/colorAccent"
                android:textSize="80dp"
                android:gravity="center"
                android:onClick="clicked7"
                android:text="7"/>
            <TextView
                android:layout_width="83dp"
                android:layout_height="100dp"
                android:textColor="@color/colorAccent"
                android:textSize="80dp"
                android:gravity="center"
                android:onClick="clicked8"
                android:text="8"/>
            <TextView
                android:layout_width="83dp"
                android:layout_height="100dp"
                android:textColor="@color/colorAccent"
                android:textSize="80dp"
                android:gravity="center"
                android:onClick="clicked9"
                android:text="9"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:id="@+id/operators"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/numbers"
        android:layout_marginBottom="100dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/plus"
            android:text="+"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="80dp"
            android:onClick="clickedPlus"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/minus"
            android:text="-"
            android:layout_toRightOf="@id/plus"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="80dp"
            android:onClick="clickedMinus"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/multiply"
            android:text="x"
            android:layout_below="@id/plus"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="70dp"
            android:paddingBottom="10dp"
            android:onClick="clickedMult"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/division"
            android:text="\u00F7"
            android:layout_below="@id/plus"
            android:layout_toRightOf="@id/multiply"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="80dp"
            android:onClick="clickedDiv"/>
    </RelativeLayout>



    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/dot"
        android:layout_toRightOf="@id/numbers"
        android:text="."
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="70dp"
        android:layout_marginBottom="20dp"
        android:onClick="clickedDot"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/dot"
        android:text="="
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="70dp"
        android:onClick="clickedEqual"/>




</RelativeLayout>
